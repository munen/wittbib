=semantic_form_for resource, :html => { :class => 'form-horizontal' } do |f|
  = f.input :email
  = f.input :password, :label => "Passwort"
  = f.input :password_confirmation, :label => "Passwort wiederholen"
  =f.actions do
    =f.action :submit, :as => :button,
      :label => "Erstelle #{resource.class.name}"
